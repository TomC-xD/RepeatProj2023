<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
</head>
<body>
    <h1>Products</h1>
    <table border="1" cellpadding="5" cellspacing="0">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Description</th>
                <th>Store ID</th>
                <th>Location</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(function(product) { %>
                <tr>
                    <td><%= product.pid %></td>
                    <td><%= product.productdesc %></td>
                    <td><%= product.sid %></td>
                    <td><%= product.location %></td>
                    <td><%= product.price %></td>
                    <td><a href="/products/delete/<%= product.pid %>">Delete <%= product.productdesc %></a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <br>
    <a href="/">Home</a>
</body>
</html>